<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Category">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        
        android:layout_marginStart="20dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/bestsel">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BEST SELLING"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="190dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_Id"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="60dp"
            android:layout_marginRight="10dp"
            android:text="DISCOVER MORE">

        </com.google.android.material.button.MaterialButton>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"

        android:layout_marginStart="20dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/newarr">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEW IN"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="230dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_Id2"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="60dp"
            android:layout_marginRight="10dp"
            android:text="DISCOVER MORE">

        </com.google.android.material.button.MaterialButton>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/face">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FACE"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="250dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_Id3"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="60dp"
            android:layout_marginRight="10dp"
            android:text="DISCOVER MORE">

        </com.google.android.material.button.MaterialButton>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/lip">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIPS"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="240dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_Id4"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="60dp"
            android:layout_marginRight="10dp"
            android:text="DISCOVER MORE">

        </com.google.android.material.button.MaterialButton>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/eyes">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EYES"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="245dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_Id5"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="60dp"
            android:layout_marginRight="10dp"
            android:text="DISCOVER MORE">

        </com.google.android.material.button.MaterialButton>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="20dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/discount">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SALE"
            android:textStyle="bold"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_Id6"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="60dp"
            android:layout_marginRight="10dp"
            android:text="DISCOVER MORE">

        </com.google.android.material.button.MaterialButton>
    </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>
