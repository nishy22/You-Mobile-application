<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".Account">

    <TextView
        android:id="@+id/user_details"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Welcome to YOU.."
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/user_detail"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:text="Our vision.. To be the best in everyday accessible beauty...

Our mission...To be our customersâ€™first choice in up to the minute beauty, loved for value, choice, friendly and fun... "
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="@color/black" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/splash"
        android:padding="20dp"/>

    <Button
        android:id="@+id/loginAccount"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:text="Sign-in to your account." />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/discount"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_gravity="center"
        android:id="@+id/logout"
        android:text="logout"/>




</LinearLayout>